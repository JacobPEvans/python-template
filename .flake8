[flake8]
max-line-length = 120
max-complexity = 10
select = E,F,W,C90
ignore =
    # Line too long (handled by black)
    E501,
    # Line break before binary operator (conflicts with black)
    W503,
    # Missing whitespace around arithmetic operator (conflicts with black)
    E226
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    .tox,
    .nox
per-file-ignores =
    # Allow assert in tests
    tests/*:S101
    # Allow unused imports in __init__.py
    __init__.py:F401
statistics = true
count = true
show-source = true
